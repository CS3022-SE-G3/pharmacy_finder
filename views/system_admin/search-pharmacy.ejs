<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= pageTitle %></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/assets/bootstrap3.min.css" media="screen" title = "no title" charset = "utf-8">
    <link rel="stylesheet" href="/assets/css/customAdmin.css" media="screen" title = "no title" charset = "utf-8">
    <script src="/assets/jquery.min.js"></script>
    <script src = "/assets/bootstrap3.min.js"></script>
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
</head>
<body>
<%- include('../includes/admin-navbar.ejs') %>
<div class="row">
    <div class="col-md-8 col-md-offset-2 well formUnderNav">
        <h2 class="text-center">Search Pharmacy</h2>
        <hr>
        <form class="form" action="" method="post">
            <%if (hasErrors) {%>
            <div class="bg-danger form-errors text-center text-danger"><%=errors%></div>
            <%}%>
            <div class="form-group col-md-6">
                <label for="pharmacyId">Pharmacy ID</label>
                <input type="text" class="form-control" name="pharmacyId" id="pharmacyId">
            </div>
            <div class="col-md-12 text-right">
                <a href="/system_admin/home" class="btn btn-default">Cancel</a>
                <input type="submit" value="Search" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="container well">
        <table class="table table-striped table-condensed table-bordered table-hover">
            <thead>
            <th>Pharmacy ID</th>
            <th>Pharmacy Name</th>
            <th></th>
            </thead>
            <tbody>
            <%if (pharmacyInfo.length===1){ %>
                <tr>
                    <td><%=pharmacyInfo[0].pharmacy_id%></td>
                    <td><%=pharmacyInfo[0].name%></td>
                    <td class="text-center">
                        <a href="/system_admin/pharmacy/view/<%=pharmacyInfo[0].pharmacy_id%>" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </td>
                </tr>
            <%}%>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
